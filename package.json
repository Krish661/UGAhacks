{
  "name": "swarmaid-backend",
  "version": "1.0.0",
  "description": "SwarmAid disaster relief coordination backend",
  "private": true,
  "workspaces": [
    "infra",
    "services"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "lint": "eslint . --ext .ts",
    "deploy": "cd infra && npm run deploy",
    "seed": "cd services && npm run seed",
    "simulate": "cd services && npm run simulate",
    "local": "docker-compose up"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
